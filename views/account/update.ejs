<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <%- messages() %>

  <div class="account-forms">
    <form action="/account/update" method="post" class="account-update">
      <h2>Update Account Information</h2>
      <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
      
      <label for="account_firstname">First Name:</label>
      <input type="text" name="account_firstname" id="account_firstname" 
        value="<%= locals.accountData.account_firstname %>" required>
      
      <label for="account_lastname">Last Name:</label>
      <input type="text" name="account_lastname" id="account_lastname" 
        value="<%= locals.accountData.account_lastname %>" required>
      
      <label for="account_email">Email:</label>
      <input type="email" name="account_email" id="account_email" 
        value="<%= locals.accountData.account_email %>" required>
      
      <button type="submit">Update Account</button>
    </form>

    <form action="/account/update-password" method="post" class="password-update">
      <h2>Change Password</h2>
      <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
      
      <label for="account_password">New Password:</label>
      <input type="password" name="account_password" id="account_password" 
        required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      
      <p class="password-requirements">
        Password must be at least 12 characters and contain at least:
        <ul>
          <li>1 capital letter</li>
          <li>1 number</li>
          <li>1 special character</li>
        </ul>
      </p>
      
      <button type="submit">Change Password</button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>