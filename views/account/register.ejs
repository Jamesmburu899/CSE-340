<%- include('../includes/head') %>
<%- include('../includes/header') %>
<%- include('../includes/nav') %>

<main class="account-main">
  <div class="account-container">
    <h1>Create an Account</h1>
    
    <% if (errors) { %>
      <ul class="notice">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
    
    <form id="registerForm" action="/account/register" method="post" class="account-form">
      <div class="form-group">
        <label for="firstname">First Name:</label>
        <input type="text" id="firstname" name="account_firstname" required>
      </div>
      
      <div class="form-group">
        <label for="lastname">Last Name:</label>
        <input type="text" id="lastname" name="account_lastname" required>
      </div>
      
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>
      </div>
      
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required>
        <span class="password-requirements">
          Passwords must be at least 12 characters and contain at least 1 number,
          1 capital letter and 1 special character
        </span>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="form-button">Register</button>
      </div>
    </form>
    
    <div class="account-links">
      <p>Already have an account? <a href="/account/login">Login</a></p>
    </div>
  </div>
</main>

<%- include('../includes/footer') %>