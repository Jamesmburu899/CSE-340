<%- include('../includes/head') %>
<%- include('../includes/header') %>
<%- include('../includes/nav') %>

<main class="edit-inventory">
    <h1>Edit <%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
    <form action="/inv/update-inventory" method="POST">
        <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
        
        <div class="form-group">
            <label for="classification_id">Classification:</label>
            <select name="classification_id" id="classification_id" required>
                <% classifications.forEach(classification => { %>
                    <option value="<%= classification.classification_id %>"
                        <%= vehicle.classification_id == classification.classification_id ? 'selected' : '' %>>
                        <%= classification.classification_name %>
                    </option>
                <% }) %>
            </select>
        </div>

        <!-- Add other form fields here following the same pattern -->
        
        <button type="submit" class="button">Update Vehicle</button>
        <a href="/inv" class="button secondary">Cancel</a>
    </form>
    <%- include('../includes/flash-messages') %>
</main>

<%- include('../includes/footer') %>